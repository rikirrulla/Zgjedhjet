<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapps"
    android:orientation="vertical"
    tools:context=".RegisterSkipActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/idKthehuRegjistrohuS"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:layout_marginRight="45dp"
                android:text="Regjistrohu"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            >
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/idNrLeternjoftimitRegjistrohu"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/edit_round"
                android:paddingLeft="20dp"
                android:hint="Numri Leternjoftimit"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/idDataLindjesRegjistrohu"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_round"
                android:paddingLeft="20dp"
                android:hint="Data Lindjes"
                android:inputType="textPersonName"
                android:ems="10"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/idFotoRegjistrohu"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/corners"
                android:src="@drawable/logoz"/>

            <Button
                android:id="@+id/idNgarkoniRegjistrohu"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Ngarkoni foton"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/button_round"
                android:textSize="13sp"/>


            <Button
                android:id="@+id/idKonfirmoRegjistrohy"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Konfirmo"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/button_round"
                android:textColor="@color/colorWhite" />



        </LinearLayout>

    </LinearLayout>

</LinearLayout>