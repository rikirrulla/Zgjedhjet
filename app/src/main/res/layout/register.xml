<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapps"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/idKthehuRegjistrohu"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:layout_marginRight="45dp"
                android:text="Regjistrohu"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />
            >
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/idEmriRegjistrohu"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/edit_round"
                android:hint="Emri"
                android:paddingLeft="20dp"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/idMbiemriRegjistrohu"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_round"
                android:paddingLeft="20dp"
                android:hint="Mbiemri"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/idEmailRegjistrohu"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_round"
                android:paddingLeft="20dp"
                android:hint="Emaili"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/idFjalkalimiRegjistrohu"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_round"
                android:paddingLeft="20dp"
                android:hint="Fjalkalimi"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/idAdresaRegjistrohu"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_round"
                android:paddingLeft="20dp"
                android:hint="Adresa"
                android:inputType="textLongMessage"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/idAVendiRegjistrohu"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_round"
                android:paddingLeft="20dp"
                android:hint="Vendi"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/poppins_regular"
                android:textSize="15sp" />


            <Spinner
                android:id="@+id/idKomunaRegjistrohu"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="Komuna"
                android:paddingLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <Button
                android:id="@+id/idVazhdoniRegjistrohu"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_round"
                android:text="Vazhdoni"
                android:textColor="@color/colorWhite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="Nese posedoni nje llogari?"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text=" Hyni"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlue"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>